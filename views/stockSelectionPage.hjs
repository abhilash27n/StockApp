<!DOCTYPE html>
<html>
  <head>
    <title>Welcome to Stock App</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet"  href="/stylesheets/select2.css"/>
	
    <!--for ajax and selectable stuff-->
    <script src="../javascripts/jquery-1.10.2.js"></script>
    <script src="../javascripts/select2.js"></script>

    <!-- For highcharts -->
    <script src="../javascripts/Highstock-4.2.4/js/highstock.js"></script>
	<script src="../javascripts/Highstock-4.2.4/js/modules/exporting.js"></script>
  </head>
  <body>
  <h1>STOCK APP - Welcome, {{ username }}</h1>

  <!-- HIDDEN DIV TO STORE USER NAME AND USER ID and also for selling or buying stock-->
  <div id="hiddenTextFields" style="display: none;">
 	 <form id="buyOrSell" action="/buyOrSell" method="post">
		  <input type="text" value="{{ username }}" id="username" name="username"/>
		  <input type="text" value="{{ userid }}" id="userid" name="userid"/>
		  <input type="text" value="" id="hiddenStockId" name="hiddenStockId"/>
		  <input type="text" value="" id="hiddenBuySell" name="hiddenBuySell"/>
		  <input type="submit" id="hiddenSubmitButton"/>
	  </form>
  </div>

  	<div style='float: right;'>
  		  <a href="/portfolioPage"> PortFolio Analysis </a> </br>
  		  <a href="/logout"> Logout </a>
  	</div>

    <select class="stock-selector" style='width:200px' change="stockChanged();">
    	<option></option>
	</select>
	<br>
	<div id="realTimeStockChart" style="height: 400px; min-width: 310px"></div>
	<br>
	<div id="historicalStockChart" style="height: 400px; min-width: 310px"></div>
	<br>
	<div id="buyButton" style="display: none">
		<input type="button" value="Follow Stock" id="buy" name="buy" onClick="buyOrSellStock();"/>
	</div>
	<div id="sellButton" style="display: none">
		<input type="button" value="Unfollow Stock" id="sell" name="sell" onClick="buyOrSellStock();"/>
	</div>


    <!--ADDING AJAX CALLS ON SUBMIT-->
    <!-- Overriding submit with ajax call-->
    <script type="text/javascript">

	    $(document).ready(function() {
	    	$.getJSON('http://localhost:3000/getAllStocks?user=ALL', function(data){
	    		$(".stock-selector").select2({
				  	data: data,
				  	placeholder: "Select a stock",
				  	allowClear: true
			  	});
	    	});
		  	
		  	$("#buyOrSell").submit(function  (e) {
		 		e.preventDefault();
		 		$.post("/buyOrSell",$(this).serialize(), function( data ) {
		 			var buyOrSell = document.getElementById("hiddenBuySell").value;
		 			if(buyOrSell == "buy"){
		 				document.getElementById("hiddenBuySell").value = "sell";
		 				document.getElementById("buyButton").style.display = 'none';
		    			document.getElementById("sellButton").style.display = 'block';
		 			}
		 			else{
		 				document.getElementById("hiddenBuySell").value = "buy";
		 				document.getElementById("buyButton").style.display = 'block';
		    			document.getElementById("sellButton").style.display = 'none';
		 			}
				});
		 	});
		});

	    ///STOCK SELECTOR
	    var $eventSelect = $(".stock-selector");
	    $eventSelect.on("select2:select", function (e) { 
	    	var selectedStock = e.params.data.id;    //or data.text
	    	checkBuyOrSell(selectedStock);
	    	createRealTimeChart(selectedStock);
	    	createHistoricalChart(selectedStock);
	    }); 

	    //Give buy or sell button
	    function checkBuyOrSell(selectedStock){
	    	var user = document.getElementById("userid").value;
	    	var stockInPortfolio = false;
	    	$.getJSON('http://localhost:3000/getAllStocks?user='+user, function(data){
	    		for(var i = 0; i < data.length; i++){
	    			if(data[i].id == selectedStock){
	    				stockInPortfolio = true;
	    				break;
	    			}
	    		}
	    		if(stockInPortfolio){
		    		document.getElementById("buyButton").style.display = 'none';
		    		document.getElementById("sellButton").style.display = 'block';
		    		document.getElementById("hiddenStockId").value = selectedStock;
		    		document.getElementById("hiddenBuySell").value = "sell";
		    	}
		    	else{
		    		document.getElementById("buyButton").style.display = 'block';
		    		document.getElementById("sellButton").style.display = 'none';
		    		document.getElementById("hiddenStockId").value = selectedStock;
		    		document.getElementById("hiddenBuySell").value = "buy";

		    	}
	    	});	    	
	    }

	    //function submit buy or sell
	    function buyOrSellStock(){
	    	document.getElementById("hiddenSubmitButton").click();
	    }

	    //STOCK CHART
	    // Load the fonts
	    //CHART DESIGN - BEGIN
		Highcharts.createElement('link', {
		   href: '//fonts.googleapis.com/css?family=Unica+One',
		   rel: 'stylesheet',
		   type: 'text/css'
		}, null, document.getElementsByTagName('head')[0]);

		Highcharts.theme = {
		   colors: ["#2b908f", "#90ee7e", "#f45b5b", "#7798BF", "#aaeeee", "#ff0066", "#eeaaee",
		      "#55BF3B", "#DF5353", "#7798BF", "#aaeeee"],
		   chart: {
		      backgroundColor: {
		         linearGradient: { x1: 0, y1: 0, x2: 1, y2: 1 },
		         stops: [
		            [0, '#2a2a2b'],
		            [1, '#3e3e40']
		         ]
		      },
		      style: {
		         fontFamily: "'Unica One', sans-serif"
		      },
		      plotBorderColor: '#606063'
		   },
		   title: {
		      style: {
		         color: '#E0E0E3',
		         textTransform: 'uppercase',
		         fontSize: '20px'
		      }
		   },
		   subtitle: {
		      style: {
		         color: '#E0E0E3',
		         textTransform: 'uppercase'
		      }
		   },
		   xAxis: {
		      gridLineColor: '#707073',
		      labels: {
		         style: {
		            color: '#E0E0E3'
		         }
		      },
		      lineColor: '#707073',
		      minorGridLineColor: '#505053',
		      tickColor: '#707073',
		      title: {
		         style: {
		            color: '#A0A0A3'

		         }
		      }
		   },
		   yAxis: {
		      gridLineColor: '#707073',
		      labels: {
		         style: {
		            color: '#E0E0E3'
		         }
		      },
		      lineColor: '#707073',
		      minorGridLineColor: '#505053',
		      tickColor: '#707073',
		      tickWidth: 1,
		      title: {
		         style: {
		            color: '#A0A0A3'
		         }
		      }
		   },
		   tooltip: {
		      backgroundColor: 'rgba(0, 0, 0, 0.85)',
		      style: {
		         color: '#F0F0F0'
		      }
		   },
		   plotOptions: {
		      series: {
		         dataLabels: {
		            color: '#B0B0B3'
		         },
		         marker: {
		            lineColor: '#333'
		         }
		      },
		      boxplot: {
		         fillColor: '#505053'
		      },
		      candlestick: {
		         lineColor: 'white'
		      },
		      errorbar: {
		         color: 'white'
		      }
		   },
		   legend: {
		      itemStyle: {
		         color: '#E0E0E3'
		      },
		      itemHoverStyle: {
		         color: '#FFF'
		      },
		      itemHiddenStyle: {
		         color: '#606063'
		      }
		   },
		   credits: {
		      style: {
		         color: '#666'
		      }
		   },
		   labels: {
		      style: {
		         color: '#707073'
		      }
		   },

		   drilldown: {
		      activeAxisLabelStyle: {
		         color: '#F0F0F3'
		      },
		      activeDataLabelStyle: {
		         color: '#F0F0F3'
		      }
		   },

		   navigation: {
		      buttonOptions: {
		         symbolStroke: '#DDDDDD',
		         theme: {
		            fill: '#505053'
		         }
		      }
		   },

		   // scroll charts
		   rangeSelector: {
		      buttonTheme: {
		         fill: '#505053',
		         stroke: '#000000',
